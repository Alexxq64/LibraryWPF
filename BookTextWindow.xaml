<Window x:Class="LibraryWPF.BookTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чтение книги" Height="500" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок книги -->
        <TextBlock x:Name="BookTitleText"
                   FontSize="20"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10" />

        <!-- Прокручиваемый текст книги -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="BookContentText"
                       FontSize="14"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis" />
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Width="100"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
