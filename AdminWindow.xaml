<Window x:Class="LibraryWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TabItem Header="Книги">
                <!-- Здесь таблица книг -->
                <DataGrid x:Name="BooksGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" />
                        <DataGridTextColumn Header="Автор" Binding="{Binding Author.LastName}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Пользователи">
                <!-- Здесь таблица пользователей -->
                <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Логин" Binding="{Binding Username}" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                        <DataGridCheckBoxColumn Header="Админ" Binding="{Binding IsAdmin}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
