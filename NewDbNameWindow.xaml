<Window x:Class="LibraryWPF.NewDbNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите имя новой базы данных" Height="150" Width="300">
    <Grid Margin="10">
        <TextBlock Text="Введите имя новой базы данных:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,10"/>
        <TextBox x:Name="DbNameTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"/>
        <Button Content="ОК" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0" Click="OkButton_Click"/>
    </Grid>
</Window>
