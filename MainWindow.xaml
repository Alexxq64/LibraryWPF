<Window x:Class="LibraryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Библиотека" Height="600" Width="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Name="MainTabControl" Grid.Row="0">
            <!-- Вкладка: Все книги -->
            <TabItem Header="Все книги">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Name="BooksGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*" />
                            <DataGridTextColumn Header="Авторы" Binding="{Binding AuthorsDisplay}" Width="200" />
                            <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="150" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Grid.Row="1">
                        <Button Content="Добавить в мои книги" Click="AddToMyBooks_Click" Width="150" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка: Мои книги -->
            <TabItem Header="Мои книги">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Name="MyBooksGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" SelectionMode="Single"
                              MouseDoubleClick="MyBooksGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Book.Title}" Width="*" />
                            <DataGridTextColumn Header="Авторы" Binding="{Binding AuthorsDisplay}" Width="200" />
                            <DataGridTextColumn Header="Прогресс" Binding="{Binding ProgressPercent}" Width="100"/>
                            <DataGridTextColumn Header="Последнее чтение" Binding="{Binding LastReadDate}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Grid.Row="1">
                        <Button Content="Читать" Click="ReadMyBook_Click" Width="80" Margin="5"/>
                        <Button Content="Удалить" Click="RemoveFromMyBooks_Click" Width="80" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Статусы -->
        <DockPanel Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <TextBlock Name="StatusText" Margin="10,5" VerticalAlignment="Center"/>
            <TextBlock Name="DbStatusText" Margin="10,5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>