<Window x:Class="LibraryWPF.LogRegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация и регистрация" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <TabControl Margin="10">
        <!-- Вход -->
        <TabItem Header="Вход">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Имя пользователя" />
                <TextBox x:Name="LoginUsernameBox" Margin="0,5,0,10" />

                <TextBlock Text="Пароль" />
                <PasswordBox x:Name="LoginPasswordBox" Margin="0,5,0,10" />

                <Button Content="Войти" Width="80" Click="LoginButton_Click" />
            </StackPanel>
        </TabItem>

        <!-- Регистрация -->
        <TabItem Header="Регистрация">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Имя пользователя" />
                <TextBox x:Name="RegisterUsernameBox" Margin="0,5,0,10" />

                <TextBlock Text="Email" />
                <TextBox x:Name="RegisterEmailBox" Margin="0,5,0,10" />

                <TextBlock Text="Пароль" />
                <PasswordBox x:Name="RegisterPasswordBox" Margin="0,5,0,10" />

                <TextBlock Text="Имя (необязательно)" />
                <TextBox x:Name="RegisterFirstNameBox" Margin="0,5,0,10" />

                <TextBlock Text="Фамилия (необязательно)" />
                <TextBox x:Name="RegisterLastNameBox" Margin="0,5,0,10" />

                <Button Content="Зарегистрироваться" Width="150" Click="RegisterButton_Click" />
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
