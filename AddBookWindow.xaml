<Window x:Class="LibraryWPF.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить книгу" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название книги:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Автор:" Margin="0,0,0,5"/>
            <TextBox x:Name="AuthorTextBox" Margin="0,0,0,15"/>
            
            <Button Content="Подтвердить" Width="100" HorizontalAlignment="Center"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>