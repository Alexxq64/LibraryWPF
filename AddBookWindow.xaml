<Window x:Class="LibraryWPF.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить книгу" Height="240" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название книги:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Имя автора:" Margin="0,5,0,0"/>
            <TextBox x:Name="AuthorFirstNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия автора:"/>
            <TextBox x:Name="AuthorLastNameTextBox" Margin="0,0,0,10"/>
            <Button Content="Подтвердить" Width="100"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>