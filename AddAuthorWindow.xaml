<Window x:Class="LibraryWPF.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить автора" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Имя автора:" Margin="0,0,0,5"/>
            <TextBox x:Name="FirstNameTextBox" Width="360" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Фамилия автора:" Margin="0,0,0,5"/>
            <TextBox x:Name="LastNameTextBox" Width="360" Height="30"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Добавить" Width="360" Height="40" VerticalAlignment="Bottom"
                Click="AddAuthorButton_Click"/>
    </Grid>
</Window>
